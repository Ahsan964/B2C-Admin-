@model B2CAdminPortal.Models.ProductsVM


<div id="main-content">
    <div class="row">
        <div class="col-lg-12">
            <div class="card">

                <div class="jsgrid-table-panel ">
                    @*<div id="jsGrid"></div>*@
                    <table id="example1 " class="table table-striped table-bordered table-condensed table-hover">
                        <thead>
                            <tr>
                                <th>ID</th>
                                <th>Name</th>
                                <th>Category</th>
                                <th>Brand</th>
                                <th>Varient</th>
                                <th>Pack Size</th>
                                <th>Price</th>
                                <th>Discount</th>
                                <th>Discounted Price</th>
                                
                                <th>Action</th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (Model != null)
                            {
                                foreach (var item in Model.productsVMs)
                                {
                                    <tr data-id="@item.Id">
                                        <td  class="td-img text-left">
                                            @item.Id
                                        </td>
                                        <td>
                                            @item.Name
                                        </td>
                                        <td>
                                            @item.FK_Category
                                        </td>
                                        <td>
                                            @item.FK_Brand
                                        </td>
                                        <td>
                                            @item.FK_Varient
                                        </td>
                                        <td>
                                            @item.FK_PackSize
                                        </td>
                                        <td>
                                            @item.Price
                                        </td>
                                        <td>
                                            @item.Discount
                                        </td>
                                        <td>
                                            @item.DiscountedAmount
                                        </td>


                                        <td>
                                            <button class="in" data-toggle="modal" data-target="#exampleModal" data-id="@item.Id"><i class="fa fa-eye" title="Info"></i></button>
                                            <a href="#" onclick="ConfirmDelete(@item.Id)"><i class="fa fa-trash removecartbtn" title="Delete"></i></a>

                                        </td>
                                    </tr>
                                }



                            }
                            else
                            {
                                <tr>
                                    <td colspan="8">
                                        <h4>
                                            No Products Found
                                        </h4>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
            <!-- /# card -->
        </div>
        <!-- /# column -->
    </div>
    <!-- /# row -->

    <!-- Modal starts -->
    <!-- Modal Ends -->



    <div class="row">
        <div class="col-lg-12">
            <div class="footer">
                <p>2018 © Admin Board. - <a href="#">example.com</a></p>
            </div>
        </div>
    </div>
</div>



<script>

    function ConfirmDelete(CustomerID) {
        debugger

        Swal.fire({
            title: 'Are you sure?',
            text: "You won't be able to revert this!",
            icon: 'warning',
            showCancelButton: true,
            confirmButtonColor: '#3085d6',
            cancelButtonColor: '#d33',
            confirmButtonText: 'Yes, delete it!'
        }).then((result) => {
            if (result.isConfirmed) {
                $.ajax({
                    type: 'GET',
                    url: '/Product/DisableProduct?Id=' + CustomerID,
                    dataType: 'JSON',
                    success: function (res) {
                        if (res.success) {
                            debugger


                            Swal.fire(
                                'Deleted!',
                                'Your file has been deleted.',
                                'success'
                            )

                            window.location.reload();
                            toastr.success("Canceled");

                        }
                        else {
                            toast.error("Failed");
                        }
                    }
                })
            }
        })
    }
    $(document).ready(function () {

        $(".in").click(function () {
            debugger
            var CustomerID = $(this).attr("data-id");
            //$("#isMainBranch").attr("disabled", true);
            //var url = "/Product/AddNewProduct?Id=" + CustomerID;

            $("#modelbody").load("/Product/AddNewProduct?id=" + CustomerID, function (e) {
                $("#modal-default").modal("show");
            });

            //$("#modelbody").load(url, function (e) {

            //    $("#modal-default").modal("show");

            //});

        })
    })

</script>


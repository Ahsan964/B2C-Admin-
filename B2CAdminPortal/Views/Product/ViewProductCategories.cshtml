@model B2CAdminPortal.Models.ProductsVM
@{
    ViewBag.Title = "ViewProductCategories";
}

<div class="content-wrap">
    <div class="main">
        <div class="container-fluid">
            <div class="row">
                <div class="col-lg-8 p-r-0 title-margin-right">
                    <div class="page-header">
                        <div class="page-title">
                            <h1>Product Categories</h1>
                        </div>
                    </div>
                </div>

            </div>
            <!-- /# row -->
            <div class="row ">
                <button style="margin-left: 18px;" type="button" class="btn btn-primary btn-sm" data-toggle="modal" data-target="#exampleModal" id="btnaddnew">Add new Category<i class="mdi mdi-play-circle ml-1"></i></button>
            </div>

            <div id="CategoryTable">

                <div id="main-content">
                    <div class="row">
                        <div class="col-lg-12">
                            <div class="card">
                                <div class="jsgrid-table-panel">
                                    @*<div id="jsGrid"></div>*@
                                    <table id="example1" class="table table-striped table-bordered table-condensed table-hover">
                                        <thead>
                                            <tr>
                                                <th>Category Name</th>

                                                <th>Action</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            @if (Model != null)
                                            {
                                                foreach (var item in Model.productsVMs)
                                                {
                                                    <tr data-id="@item.Id">

                                                        <td>
                                                            @item.Name
                                                        </td>
                                                        <td>
                                                            <button data-toggle="modal" data-target="#exampleModal" class="UpdateBtn" data-id="@item.Id" ><i class="ti-pencil" title="Edit"></i></button>
                                                            <a href="#" onclick="ConfirmDelete(@item.Id)"><i class="ti-close" title="Delete"></i></a>

                                                        </td>
                                                    </tr>
                                                }

                                            }
                                            else
                                            {
                                                <tr>
                                                    <td colspan="8">
                                                        <h4>
                                                            No Categories Found
                                                        </h4>
                                                    </td>
                                                </tr>
                                            }
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                            <!-- /# card -->
                        </div>
                        <!-- /# column -->
                    </div>
                    <!-- /# row -->
                    <!-- Modal starts -->

                    <div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
                        <div class="modal-dialog modal-lg" role="document">
                            <div class="modal-content">
                                <div class="modal-header">
                                    <h5 class="modal-title" id="exampleModalLabel">Add New Product</h5>
                                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                        <span aria-hidden="true">&times;</span>
                                    </button>
                                </div>
                                <div class="modal-body" id="modelbody">

                                </div>
                                <div class="modal-footer">
                                    <button type="button" class="btn btn-success" id="btnsubmit">Submit</button>
                                    <button type="button" class="btn btn-light" data-dismiss="modal">Cancel</button>
                                </div>
                            </div>
                        </div>
                    </div>
                    <!-- Modal Ends -->

                </div>


            </div>
        </div>
    </div>
</div>


@section scripts{

    <script>
        $(document).ready(function () {
            $("#btnaddnew").click(function () {

                $("#modelbody").load("/Product/AddNewProductCategory", function (e) {
                    $("#modal-default").modal("show");
                });

            })

        $(".UpdateBtn").click(function () {
            debugger
            var CustomerID = $(this).attr("data-id");
            

            $("#modelbody").load("/Product/AddNewProductCategory?Id=" + CustomerID, function (e) {
                
                $("#modal-default").modal("show");
                
            });

        });
        });

        function ConfirmDelete(CustomerID) {
            debugger

            Swal.fire({
                title: 'Are you sure?',
                text: "You won't be able to revert this!",
                icon: 'warning',
                showCancelButton: true,
                confirmButtonColor: '#3085d6',
                cancelButtonColor: '#d33',
                confirmButtonText: 'Yes, delete it!'
            }).then((result) => {
                if (result.isConfirmed) {
                    $.ajax({
                        type: 'GET',
                        url: '/Product/DisableProductCategory?id=' + CustomerID,

                        dataType: 'JSON',
                        success: function (res) {
                            if (res.success) {
                                debugger


                                Swal.fire(
                                    'Deleted!',
                                    'Your file has been deleted.',
                                    'success'
                                )


                                window.location.reload();// = "//ViewClient"
                                toastr.success("Deleted");

                            }
                            else {
                                toast.error("Failed");
                            }
                        }
                    })
                }
            })
        }


        $("#btnsubmit").click(function (e) {
            console.log("here");
            e.preventDefault();
            var form = $("#addnewform");
           
            if ($(form)) {
                $.ajax({
                    type: "POST",
                    url: "/Product/AddUpdateCategory",
                    data: $(form).serialize(),
                    success: function (res) {
                        console.log(res);
                        if (res.success) {
                            toastr.success(res.msg);
                            window.location.reload(); 
                        }
                        else if (res.success == false ) {
                            toastr.error(res.msg);
                        }
                    },
                    failure: function (res) {
                        console.log(res);
                    },
                    err: function (res) {
                        console.log(res);
                    }
                })
            }
            else {
                return false;
            }
        });



    </script>
}